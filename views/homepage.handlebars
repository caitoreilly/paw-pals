 <main>
         <!-- section with name of company, sign up prompt, and picture of Mae-->
      <section class="welcome">
        <div class="dogbone">
          <img src="./assets/dogbone.png" height="75px" />
        </div>
        <div class="intro">
          <h1 class="title">Paw Pals</h1>
          <h1 class="sign-up-prompt"><a href="#sign-up">Sign Up!</a></h1>
        </div>
      </section>

    <!-- section to sign up -->
    <section id="sign-up">
        <div class="section-title">
            <h2 class="sign-up-title">Sign Up</h2>
        </div>
        <div class="orangepaw">
          <img src="/assets/orangepaw.png" height="100px" />
        </div>
        <div><h3 class="pup">Create Your Pup's Profile!</h3></div>
        <div class="signup-form">
            <form>
                <p class="form-header">Your Information:</p>
               <p>
                <label for="email">Enter your email address:</label>
                <input type="text" name="email" class="form-input"/> </br>
                <label for="username">Enter a username:</label>
                <input type="text" name="username" class="form-input"/> </br>
              <label for="password">Enter a password:</label>
                <input type="text"  name="password" class="form-input"/></br>
                  </p>
                  <p class="form-header">Your Pup's Information:</p>
                  <p>
                    <p>PLEASE CAPITALIZE YOUR TYPED RESPONSES!</p>
                    <label for="name">Enter your dog's name:</label>
                <input type="text"  name="name" class="form-input"/> </br>
                  <label for="age">Enter your dog's age:</label>
                <input type="text" name="age" class="form-input"/> </br>
                  <label for="breed">Enter your dog's breed:</label>
                <input type="text"  name="breed" class="form-input"/> </br>
                  <label for="activity">Enter your dog's favorite activity (walk, run, ball, frisbee, other):</label>
                <input type="text" name="activity" class="form-input"/></br>
                <label for="availability">Enter your time availability (morning, afternoon, or night):</label>
                <input type="text"  name="availability" class="form-input"/> </br>
                  <label for="borough">Enter your NYC borough:</label>
                <input type="text"  name="borough" class="form-input"/> </br>
                </p>
                <p class="form-header">Add a Picture of Your Pup:</p>
                <p>
                    <label for="picture">Enter a URL link for your image:</label>
                    <input type="url"  name="dogpic" class="form-input"/>                
                </p>
                <button type="submit">
                    Get Started!
                </button>
            </form>
        </div>
      </section>

       <!-- about us section -->
      <section id="about" class="about-us">
<div class="section-title">
